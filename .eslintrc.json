{
  "root": true,
  "env": { "browser": true, "es2021": true, "node": true },
  "extends": [
    "eslint-config-pyosh",
    "eslint-config-pyosh/typescript",
    "eslint-config-pyosh/prettier"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": ["./tsconfig.json", "./front/tsconfig.json"],
        "sourceType": "module"
      }
    }
  },
  "ignorePatterns": ["vite.config.ts"],
  "rules": {},
  "overrides": [
    {
      "files": [
        "front/**/*.ts",
        "front/**/*.tsx",
        "front/**/*.js",
        "front/**/*.jsx"
      ],
      "parserOptions": {
        "project": "./front/tsconfig.json"
      }
    },
    {
      "files": ["src/**/*.ts"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ]
}
